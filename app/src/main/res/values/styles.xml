    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowBackground">
            @drawable/launch_screen
        </item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyAppTheme" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="viewCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/explode</item>
    </style>

    <style name="CategoryTextView" parent="android:Widget.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:elevation">10dp</item>-->
        <!--<item name="android:background">@color/transparent_white</item>-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <!--<item name="android:buttonCornerRadius">10dp</item>-->

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/starColor</item>
    </style>

